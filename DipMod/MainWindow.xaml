                        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding PortSettings[7].offset , UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    </Grid>
                    <Button Grid.Column="4" Grid.Row="8" Command="{Binding SaveCommand}">Save</Button>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
